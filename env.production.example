# ============================================
# AURION SaaS - PRODUCTION ENVIRONMENT
# Copier vers .env.production et remplir les valeurs
# ============================================

# ============================================
# CLÉS CRITIQUES - OBLIGATOIRES
# ============================================

# Supabase - Base de données PRODUCTION
VITE_SUPABASE_URL=https://your-prod-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_prod_supabase_anon_key
VITE_SUPABASE_SERVICE_ROLE_KEY=your_prod_supabase_service_role_key

# Clerk - Authentification PRODUCTION
VITE_CLERK_PUBLISHABLE_KEY=pk_live_your_clerk_publishable_key

# ============================================
# PAIEMENTS STRIPE - PRODUCTION (LIVE)
# ============================================

VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_production_webhook_secret

# ============================================
# GÉNÉRATION IA - PRODUCTION
# ============================================

VITE_OPENROUTER_API_KEY=sk-or-v1-your_openrouter_key
VITE_FREEPIK_API_KEY=your_freepik_api_key

# ============================================
# MONITORING & OBSERVABILITÉ
# ============================================

SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# ============================================
# CONFIGURATION PRODUCTION
# ============================================

NODE_ENV=production
VITE_APP_ENV=production

# ============================================
# SÉCURITÉ
# ============================================

# Domaines autorisés (pour CORS et CSP)
ALLOWED_ORIGINS=https://yourapp.com,https://www.yourapp.com

# Secret pour les tokens de session iframe
TOOL_SESSION_SECRET=your_secure_random_32_character_secret
